<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/text1"
        android:layout_marginTop="150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/foo"
        android:layout_centerHorizontal="true"
        android:text="Here is Text1"
        android:textSize="20dp"
        android:padding="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/foobar"
        android:layout_below="@+id/text1"
        android:layout_alignLeft="@+id/text1"
        android:text="This is Text2"
        android:textSize="20dp"
        android:padding="10dp"
        android:id="@+id/text2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text 3"
        android:textSize="20dp"
        android:padding="10dp"
        android:layout_below="@+id/text2"
        android:layout_alignLeft="@+id/text2"
        android:background="@color/foo"
        android:id="@+id/text3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text4 is found here"
        android:id="@+id/text4"
        android:layout_alignLeft="@+id/text3"
        android:layout_below="@+id/text3"
        android:textSize="20dp"
        android:padding="10dp"
        android:background="@color/foobar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text5"
        android:layout_alignLeft="@+id/text4"
        android:layout_below="@+id/text4"
        android:text="Finally is Text5"
        android:textSize="20dp"
        android:padding="10dp"
        android:background="@color/foo"/>




</RelativeLayout>